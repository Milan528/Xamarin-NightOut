<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="LoginAndRegister" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="SplashTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">

    <item name="android:windowBackground"> @drawable/splashImage</item>
    <item name="android:windowNoTitle"> true</item>
    <item name="android:windowFullscreen"> true</item>
    
  </style>
  
  <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryDark">@color/lightBlue</item>
    <item name="colorAccent">@color/lightRed</item>
  </style>


 
  
</resources>
